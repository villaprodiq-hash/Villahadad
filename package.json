{
  "name": "villahadad-v2",
  "private": true,
  "version": "1.0.87",
  "type": "module",
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammedalkhldiy/VillahadadUpdate"
  },
  "build": {
    "appId": "com.villahadad.app",
    "productName": "VillaHadad",
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mohammedalkhldiy",
        "repo": "VillahadadUpdate",
        "releaseType": "release"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "scripts": {
    "dev": "vite --mode development",
    "dev:manager": "VITE_APP_MODE=manager vite",
    "dev:reception": "VITE_APP_MODE=reception vite",
    "dev:admin": "VITE_APP_MODE=admin vite",
    "dev:production": "VITE_APP_MODE=production vite",
    "dev:printer": "VITE_APP_MODE=printer vite",
    "build": "vite build",
    "build:manager": "VITE_APP_TARGET=manager tsc && vite build && electron-builder --mac",
    "build:reception": "VITE_APP_TARGET=reception tsc && vite build && electron-builder --mac",
    "build:admin": "VITE_APP_TARGET=admin tsc && vite build && electron-builder --mac",
    "build:production": "VITE_APP_TARGET=production tsc && vite build && electron-builder --mac",
    "build:printer": "VITE_APP_TARGET=printer tsc && vite build && electron-builder --mac",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac-arm64": "npm run build && electron-builder --mac --arm64",
    "package:mac-x64": "npm run build && electron-builder --mac --x64",
    "package:mac-universal": "npm run build && electron-builder --mac --arm64 --x64",
    "package:manager": "npm run build:manager",
    "package:reception": "npm run build:reception",
    "package:admin": "npm run build:admin",
    "package:printer": "npm run build:printer",
    "package:dev": "VITE_APP_MODE=development npm run build && electron-builder --mac",
    "publish:release": "export $(cat .env | grep GH_TOKEN) && npm run build && electron-builder --mac --publish always",
    "publish:intel": "export $(cat .env | grep GH_TOKEN) && npm run build && electron-builder --mac --x64 --publish always",
    "publish:universal": "export $(cat .env | grep GH_TOKEN) && npm run build && electron-builder --mac --x64 --arm64 --publish always",
    "preview": "vite preview",
    "test": "vitest run",
    "share": "node scripts/share.cjs",
    "qa:gate": "node scripts/release-gate.cjs",
    "qa:gate:quick": "node scripts/release-gate.cjs --skip-tests --changed",
    "qa:gate:e2e": "node scripts/release-gate.cjs --e2e",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:changed": "node scripts/lint-changed.cjs",
    "lint:changed:fix": "node scripts/lint-changed.cjs --fix",
    "typecheck:app": "tsc -p tsconfig.app.json --pretty false",
    "typecheck": "npm run typecheck:app",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps",
    "claude:sync": "cat CLAUDE.md && cat CLAUDE_TASKS.md"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@capacitor-community/sqlite": "^7.0.2",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@hello-pangea/dnd": "16.6.0",
    "@react-spring/web": "^10.0.3",
    "@splinetool/react-spline": "^4.1.0",
    "@splinetool/runtime": "^1.12.29",
    "@supabase/supabase-js": "^2.90.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/query-sync-storage-persister": "^5.90.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-persist-client": "^5.90.18",
    "@tanstack/react-virtual": "^3.13.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/leaflet": "^1.9.21",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "latest",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "framer-motion": "10.18.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "kysely": "^0.28.9",
    "leaflet": "^1.9.4",
    "lodash": "4.17.21",
    "lucide-react": "0.300.0",
    "qrcode.react": "^4.2.0",
    "react": "18.2.0",
    "react-circular-progressbar": "^2.2.0",
    "react-dom": "18.2.0",
    "react-draggable": "4.4.6",
    "react-dropzone": "^14.3.8",
    "react-grid-layout": "1.4.4",
    "react-hook-form": "^7.69.0",
    "react-leaflet": "^4.2.1",
    "recharts": "2.12.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "uuid": "latest",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tsconfig/strictest": "^2.0.8",
    "@tsconfig/vite-react": "^7.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "4.0.16",
    "autoprefixer": "^10.4.23",
    "electron": "^39.6.0",
    "electron-builder": "26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "localtunnel": "^2.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "4.0.16"
  }
}
